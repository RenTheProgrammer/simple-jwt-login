<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="phpunit_bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="true"
         stopOnFailure="false">
    <php>
        <ini name="memory_limit" value="512M" />
    </php>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./simple-jwt-login/src</directory>
            <exclude>
                <file>./simple-jwt-login/src/Modules/WordPressData.php</file>
                <directory suffix=".php">./simple-jwt-login/src/Libraries/</directory>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="SimpleJwtLogin Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
</phpunit>